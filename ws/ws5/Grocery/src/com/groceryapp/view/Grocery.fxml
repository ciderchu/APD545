<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.groceryapp.controller.CartController"
    hgap="10" vgap="10">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <children>
        <!-- Cart ID Label -->
        <Label fx:id="cartIdLabel" text="Cart #1" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold; -fx-font-size: 14;"/>
        
        <!-- Dropdown for selecting items -->
        <Label text="Select Item:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="itemsComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Unit and Price Labels -->
        <Label text="Unit:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="unitLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Price/Unit:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="unitPriceLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Select Units:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Slider fx:id="quantitySlider"
        min="0" max="10" value="1"
        majorTickUnit="1" minorTickCount="0"
        blockIncrement="1"
        snapToTicks="true"
        showTickMarks="true"
        showTickLabels="true"
        GridPane.columnIndex="1" GridPane.rowIndex="4" />
        
        <Label fx:id="selectedQuantityLabel" text="1" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        
        <Label text="Purchased Units:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label fx:id="purchasedUnitsLabel" text="1" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        

        <!-- Buttons: Add to Cart / Remove from Cart -->
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <Button fx:id="addToCartButton" text="Add to Cart"/>
            <Button fx:id="removeButton" text="Remove from Cart"/>
        </HBox>

        <!-- TableView for cart items -->
        <TableView fx:id="cartTableView" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="3">
            <columns>
                <TableColumn fx:id="itemColumn" text="Item Name" prefWidth="150"/>
                <TableColumn fx:id="quantityColumn" text="Purchased Units" prefWidth="150"/>
                <TableColumn fx:id="priceColumn" text="Purchase Price" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Total Price Label -->
        <Label text="Total Amount:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <Label fx:id="totalPriceLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        
        <!-- New Buttons: Save Cart, Checkout, View Saved Carts -->
        <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="3">
            <Button fx:id="saveCartButton" text="Save Cart"/>
            <Button fx:id="checkoutButton" text="Checkout"/>
            <Button fx:id="viewSavedCartsButton" text="View Saved Carts"/>
        </HBox>
    </children>
</GridPane>